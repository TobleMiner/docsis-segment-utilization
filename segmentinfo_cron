#!/usr/bin/env bash

FRONTENDS="-a 0.1"
FREQUENCIES="-f 546000000 -f 554000000 -f 562000000 -f 570000000 -f 578000000 -f 586000000 -f 594000000 -f 602000000 -f 666000000 -f 674000000 -f 682000000 -f 690000000 -f 698000000 -f 706000000 -f 714000000 -f 722000000 -f 762000000 -f 770000000 -f 778000000 -f 786000000 -f 794000000 -f 802000000 -f 810000000 -f 818000000"
SAMPLES="-s 100000"

DATAFILE=/tmp/segmentdata.log
DATAFILE_PART="$DATAFILE".part

segmentinfo $FRONTENDS $SAMPLES $FREQUENCIES > "$DATAFILE_PART"
mv "$DATAFILE_PART" "$DATAFILE"
